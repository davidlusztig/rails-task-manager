<h1><%= @task.title %></h1>

<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<p> <%= link_to "Go back to task list", tasks_path %> </p>
<p> <%= link_to "Add a new task", tasks_new_path %> </p>
<p> <%= link_to "Edit this task", edit_task_path %> </p>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
